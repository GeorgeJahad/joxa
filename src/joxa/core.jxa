(module joxa.core
        (require erlang lists))

(defn+ +(&rest args)
  (case args
    ([x y]
     (erlang/+ x y))
    ((a . b)
     (lists/sum args))
    (arg
     arg)))


(defn - (num-list acc)
  (case num-list
    ([]
     acc)
    ((a . rest)
     (- rest  (erlang/- acc a)))))

(defn+ -(&rest args)
  (case args
    ([a]
     (erlang/- 0 a))
    ((a . rest)
     (- rest a))))

